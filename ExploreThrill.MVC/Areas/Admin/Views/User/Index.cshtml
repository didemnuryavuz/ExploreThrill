@model List<ExploreThrill.Core.Entities.Concrete.MyUser>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
}

<div class="container mt-5">
    <h2>Kullanıcı Listesi</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Kullanıcı Adı</th>
                <th>Email</th>
                <th>T.C. Kimlik No</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.TcNo</td>
                    <td>
                        <a href="@Url.Action("Details", "User", new { id = user.Id })" class="btn btn-info">Detaylar</a>
                        <a href="@Url.Action("Edit", "User", new { id = user.Id })" class="btn btn-warning">Düzenle</a>
                        <a href="@Url.Action("Delete", "User", new { id = user.Id })" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
