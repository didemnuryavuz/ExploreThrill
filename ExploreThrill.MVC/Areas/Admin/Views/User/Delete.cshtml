@model ExploreThrill.Core.Entities.Concrete.MyUser

@{
    ViewData["Title"] = "Kullanıcıyı Sil";
}

<div class="container mt-5">
    <h2>Kullanıcıyı Sil</h2>
    <div class="alert alert-danger">
        <p>Kullanıcıyı silmek istediğinize emin misiniz?</p>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Kullanıcı Adı: @Model.UserName</h5>
            <p class="card-text">Email: @Model.Email</p>
            <p class="card-text">T.C. Kimlik No: @Model.TcNo</p>
        </div>
        <div class="card-footer">
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Sil</button>
                <a href="@Url.Action("Index", "User")" class="btn btn-secondary">Vazgeç</a>
            </form>
        </div>
    </div>
</div>
