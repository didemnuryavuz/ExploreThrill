@model RegisterViewModel

<!doctype html>
<html lang="en">
<head>
    <title>Login </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/login-form-15/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Sign Up </h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="wrap">
                        <div class="img" style="background-image: url('/login-form-15/images/bg-1.jpg');"></div>
                        <div class="login-wrap p-4 p-md-5">
                            <div class="d-flex">
                                <div class="w-100">
                                    <h3 class="mb-4">Sign Up</h3>
                                </div>
                                <div class="w-100">
                                    <p class="social-media d-flex justify-content-end">
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                                    </p>
                                </div>
                            </div>
                            <form asp-controller="Account" asp-action="Register" method="post" class="signin-form">
                                <div class="text-danger text-center">@Html.ValidationMessage("UserCreate")</div>

                                <div class="form-group mt-3">
                                    <input asp-for="Email" class="form-control" required>
                                    <label class="form-control-placeholder" for="Email">Email</label>
                                </div>
                                <div class="form-group">
                                    <input id="password-field" asp-for="Password" class="form-control" required>
                                    <label class="form-control-placeholder" for="Password">Password</label>
                                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                                <div class="form-group">
                                    <input id="repassword-field" asp-for="ConfirmPassword" class="form-control" required>
                                    <label class="form-control-placeholder" for="RePassword">RePassword</label>
                                    <span toggle="#repassword-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                                <div class="form-group mt-3">
                                    <input id="id-field" asp-for="TcNo" class="form-control" required>
                                    <label class="form-control-placeholder" for="TcNo">I.D.</label>
                                    <span toggle="#id-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign Up</button>
                                </div>
                            </form>


                            <p class="text-center">A member? <a class="rd-nav-link" asp-controller="Account" asp-action="Login">Sign In </a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/login-form-15/js/jquery.min.js"></script>
    <script src="~/login-form-15/js/popper.js"></script>
    <script src="~/login-form-15/js/bootstrap.min.js"></script>
    <script src="~/login-form-15/js/main.js"></script>

</body>
</html>

