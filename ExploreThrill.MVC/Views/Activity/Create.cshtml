@model ExploreThrill.Entities.Models.Concrete.Activity

@{
    ViewBag.Title = "Create Activity";
}

<h2>Create Activity</h2>

<h4>Activity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="ActivityName" class="control-label"></label>
                <input asp-for="ActivityName" class="form-control" />
                <span asp-validation-for="ActivityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityDate" class="control-label"></label>
                <input asp-for="ActivityDate" class="form-control" />
                <span asp-validation-for="ActivityDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cities" class="control-label">Cities</label>
                <select asp-for="Cities" class="form-control" asp-items="@(new SelectList(ViewBag.Cities, "Id", "Name"))" multiple="multiple"></select>
            </div>

            <div class="form-group">
                <label asp-for="Categories" class="control-label">Categories</label>
                <select asp-for="Categories" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))" multiple="multiple"></select>
            </div>

            <div class="form-group">
                <label asp-for="Companies" class="control-label">Companies</label>
                <select asp-for="Companies" class="form-control" asp-items="@(new SelectList(ViewBag.Companies, "Id", "CompanyName"))" multiple="multiple"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

