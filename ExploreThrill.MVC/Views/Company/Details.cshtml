        @foreach (var activity in Model.Activities)
        {
        <li class="list-group-item">@activity.ActivityName</li>
        }
        </ul>
        </div> *@
    </div>
    <div class="row mt-4">
        <div class="col-md-12">
            <a href="@Url.Action("Index", "Company")" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
